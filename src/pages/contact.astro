---
import GlobalLayout from '@layouts/GlobalLayout.astro';
import { SITE_NAME } from '@lib/constants';
import { Image } from 'astro:assets';
import IconImage from '@assets/img/icon-512.png';
import { Box } from '@components/general/Box';
import { FaBrandsTwitter } from 'solid-icons/fa';
import { FaBrandsGithub } from 'solid-icons/fa';

const TITLE = 'お問い合わせ';
---

<GlobalLayout title={`${TITLE} | ${SITE_NAME}`}>
  <h1 class="mb-10 text-xl font-bold text-gray-600">{TITLE}</h1>
  <div class="flex flex-col gap-4 md:flex-row">
    <Box class="flex w-full flex-col items-center justify-center md:w-1/3">
      <figure class="flex flex-col items-center gap-2">
        <Image class="max-w-24" src={IconImage} width={IconImage.width / 2} densities={[1.5, 2]} alt="" />
        <figcaption class="text-center font-sans font-bold text-blue-900">にとり 210</figcaption>
      </figure>
      <ul class="flex items-center justify-center gap-6 p-5">
        <li>
          <a href="https://twitter.com/aboutjobjust331" target="_blank" rel="noopener noreferrer">
            <FaBrandsTwitter size={32} color="#1d9bf0" title="twitter" />
          </a>
        </li>
        <li>
          <a href="https://github.com/aboutjobjust" target="_blank" rel="noopener noreferrer">
            <FaBrandsGithub size={32} color="#333" title="Github" />
          </a>
        </li>
      </ul>
      <div class="pt-4">
        <p>観測者ヰ組</p>
      </div>
    </Box>
    <Box class="w-full md:w-2/3">
      <h2 class="mb-10 text-2xl font-bold text-gray-600">お問い合わせ</h2>
      <form class="flex w-full flex-col gap-5" action="https://ssgform.com/s/wRCyzt1wdVBU" method="post">
        <label class="input input-bordered flex items-center gap-2">
          Name
          <input type="text" name="name" class="grow" placeholder="ヰ世界 太郎" required />
        </label>
        <label class="input input-bordered flex items-center gap-2">
          Email
          <input type="email" name="email" class="grow" placeholder="isekai@example.com" required />
        </label>
        <textarea name="comments" placeholder="お問い合わせ内容" class="textarea textarea-bordered w-full" required
        ></textarea>
        <div>
          <button class="btn btn-wide" type="submit">送信する</button>
        </div>
      </form>
    </Box>
  </div>
</GlobalLayout>
